{
  "info": {
    "name": "Healthcare Backend API",
    "_postman_id": "b1b4b4d7-0d4f-4b75-9f0f-3b1b4b9f3a1c",
    "description": "Collection for testing authentication, patients, doctors, and mappings.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000"
    },
    {
      "key": "accessToken",
      "value": ""
    },
    {
      "key": "patientId",
      "value": "1"
    },
    {
      "key": "doctorId",
      "value": "1"
    },
    {
      "key": "mappingId",
      "value": "1"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/register/",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register", ""]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Jane Doe\",\n  \"email\": \"jane@example.com\",\n  \"password\": \"StrongPass123!\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const data = pm.response.json();",
                  "if (data && data.access) {",
                  "  pm.collectionVariables.set('accessToken', data.access);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/login/",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login", ""]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"jane@example.com\",\n  \"password\": \"StrongPass123!\"\n}"
            }
          }
        }
      ]
    },
    {
