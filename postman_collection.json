          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/patients/",
              "host": ["{{baseUrl}}"],
              "path": ["api", "patients", ""]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"first_name\": \"Amy\",\n  \"last_name\": \"Smith\",\n  \"date_of_birth\": \"1990-05-10\",\n  \"gender\": \"female\",\n  \"phone\": \"555-111-2222\",\n  \"email\": \"amy@example.com\",\n  \"address\": \"123 Main St\",\n  \"notes\": \"Allergic to penicillin\"\n}"
            }
